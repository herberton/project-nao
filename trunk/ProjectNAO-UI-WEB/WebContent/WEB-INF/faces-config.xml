<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
    version="2.1">
	<application>
		<locale-config>
			<default-locale>pt_BR</default-locale>
			<supported-locale>pt_BR</supported-locale>
			<supported-locale>en_US</supported-locale>
			<supported-locale>es_ES</supported-locale>
		</locale-config>

		<resource-bundle>
			<base-name>br.com.project.nao.ui.web.i18n.application</base-name>
			<var>i18n</var>
		</resource-bundle>
		<message-bundle>br.com.project.nao.ui.web.i18n.application</message-bundle>
	</application>
	<lifecycle>
		<phase-listener>br.com.project.nao.ui.web.pl.AuthenticationPL</phase-listener>
	</lifecycle>

</faces-config>
